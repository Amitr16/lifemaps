{
  "name": "life-sheet-backend",
  "version": "1.0.0",
  "description": "Backend API for Life Sheet financial planning application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:monitored": "node start-server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop lifemaps-api",
    "restart:pm2": "pm2 restart lifemaps-api",
    "logs:pm2": "pm2 logs lifemaps-api",
    "dev": "nodemon server.js",
    "dev:monitored": "nodemon --exec 'node --trace-uncaught --trace-warnings --trace-gc server.js'",
    "debug:crash": "node debug-crash.js",
    "debug:simple": "node simple-debug.js",
    "init-db": "node scripts/init-db.js",
    "init-render-db": "node scripts/init-render-db.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["financial", "planning", "api", "backend", "postgresql"],
  "author": "Life Sheet Team",
  "license": "MIT"
}
